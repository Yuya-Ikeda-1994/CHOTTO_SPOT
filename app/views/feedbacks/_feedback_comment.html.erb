
  <td>
    <div class="flex items-center space-x-2">
      <% if @spot.user.avater.present? %>
        <%= image_tag @spot.user.avater_url, class: "w-8 h-8 border-4 border-white rounded-full" %>
      <% else %>
        <%= image_tag("default.png", class: "w-8 h-8 border-4 border-white rounded-full") %>
      <% end %>
      <h3 class="text-sm font-semibold"><%= feedback.user.first_name %> <%= feedback.user.last_name %></h3>
    </div>
    <div id="js-feedback-<%= feedback.id %>" class = "text-sm">
      コメント
      <%= simple_format(feedback.feedback_comment) %>
    </div>
    <div id="js-textarea-feedback-box-<%= feedback.id %>" class="hidden">
      <textarea id="js-textarea-feedback-<%= feedback.id %>" class="form-control mb-1 border border-gray-300 rounded-md shadow-sm p-2 w-full" placeholder="フィードバックを入力"><%= feedback.feedback_comment %></textarea>
      <button class="js-button-edit-feedback_comment-cancel bg-gray-200 hover:bg-gray-300 text-gray-800 font-bold py-2 px-4 rounded-l cursor-pointer" data-feedback-id="<%= feedback.id %>">キャンセル</button>
      <button class="js-button-feedback-update bg-green-500 hover:bg-green-600 text-white font-bold py-2 px-4 rounded-r cursor-pointer" data-feedback-id="<%= feedback.id %>">更新</button>
    </div>
  </td>

  <% if current_user&.own?(feedback) %>
    <div class="text-right">
      <div class="inline-flex justify-center">
        <a href="#" class="js-edit-feedback_comment-button" data-feedback-id="<%= feedback.id %>" title="編集">
          <svg class="h-5 w-5 text-purple-500 hover:text-purple-700" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 20h4l10.5 -10.5a1.5 1.5 0 0 0 -4 -4L4 16v4zM13.5 6.5l4 4" />
          </svg>
        </a>
        <a href="#" class="js-delete-feedback_comment-button ml-2" data-feedback-id="<%= feedback.id %>" title="削除">
          <svg class="h-5 w-5 text-purple-500"  width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">  <path stroke="none" d="M0 0h24v24H0z"/>  <line x1="4" y1="7" x2="20" y2="7" />  <line x1="10" y1="11" x2="10" y2="17" />  <line x1="14" y1="11" x2="14" y2="17" />  <path d="M5 7l1 12a2 2 0 0 0 2 2h8a2 2 0 0 0 2 -2l1 -12" />  <path d="M9 7v-3a1 1 0 0 1 1 -1h4a1 1 0 0 1 1 1v3" /></svg>
        </a>
      </div>
    </div>
  <% end %>

  <script>
    document.addEventListener('DOMContentLoaded', (event) => {
      document.querySelectorAll('.js-edit-feedback_comment-button').forEach(button => {
        button.addEventListener('click', function(e) {
          e.preventDefault();
          const feedbackId = this.dataset.feedbackId;
          document.querySelector(`#js-textarea-feedback-box-${feedbackId}`).classList.remove('hidden');
        });
      });

      document.querySelectorAll('.js-button-edit-feedback_comment-cancel').forEach(button => {
        button.addEventListener('click', function(e) {
          e.preventDefault();
          const feedbackId = this.dataset.feedbackId;
          document.querySelector(`#js-textarea-feedback-box-${feedbackId}`).classList.add('hidden');
        });
      });
    });
  </script>