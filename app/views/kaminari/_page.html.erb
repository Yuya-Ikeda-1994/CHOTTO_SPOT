<% if page.current? %>
  <li class="inline-block border border-gray-300 bg-purple-500 text-white rounded hover:bg-purple-700">
    <%= content_tag :a, page, data: { remote: remote }, rel: page.rel, class: 'block px-2 py-1 text-xs' %>
  </li>
<% else %>
  <li class="inline-block border border-gray-300 bg-white rounded hover:bg-purple-500 hover:text-white">
    <%= link_to page, url, remote: remote, rel: page.rel, class: 'block px-2 py-1 text-xs' %>
  </li>
<% end %>